<Window x:Name="mainWindow" x:Class="htunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:htunes"
        mc:Ignorable="d"
        Title="hTunes" Height="350" Width="525">
    <Grid>
        <ToolBarPanel>
            <ToolBar Band="1" BandIndex="1" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="518">
                <Button>
                    <Image Source="music_folder.ico" />
                </Button>
                <Button>
                    <Image Source="playlist_new.ico" />
                </Button>
                <Button>
                    <Image Source="get_info.ico" />
                </Button>
                <!--<TextBox HorizontalAlignment="Right" Width="150"/>-->
            </ToolBar>
        </ToolBarPanel>

        <DataGrid x:Name="songList" Height="Auto" Margin="10,50,10,100"
                 Width="Auto" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                <DataGridTextColumn Binding="{Binding Artist}" Header="Artist" />
                <DataGridTextColumn Binding="{Binding Album}" Header="Album" />
                <DataGridTextColumn Binding="{Binding Genre}" Header="Genre" />
            </DataGrid.Columns>

        </DataGrid>

        <Button Content="Play/Pause" HorizontalAlignment="Left" Width="75" Height="25" Margin="10,270,0,25.8"/>
        <Button Content="Next" HorizontalAlignment="Left" Width="75" Height="25" Margin="170,270,0,25.8" />
        <Button Content="Previous" HorizontalAlignment="Left" Width="75" Height="25" Margin="90,270,0,25.8" />
        <Button Content="Stop" HorizontalAlignment="Left" Width="75" Height="25" Margin="250,270,0,25.8" />

    </Grid>
</Window>