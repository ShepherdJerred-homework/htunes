<Window x:Name="mainWindow" x:Class="htunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:htunes"
        mc:Ignorable="d"
        Title="hTunes" Height="500" Width="800">
    <Grid>
        <ToolBarPanel>
            <ToolBar Band="1" BandIndex="1" Height="44" VerticalAlignment="Top" Width="Auto">
                <Button>
                    <Image Source="music_folder.ico" />
                </Button>
                <Button>
                    <Image Source="playlist_new.ico" />
                </Button>
                <Button>
                    <Image Source="get_info.ico" />
                </Button>
                <!--<TextBox HorizontalAlignment="Right" Width="150"/>-->
            </ToolBar>
        </ToolBarPanel>
        <DockPanel Width="Auto" Height="Auto" LastChildFill="True">
            <ListBox Height="Auto" Width="100" Margin="10,50,10,10" DockPanel.Dock="Left" />
            <StackPanel Height="Auto" Width="Auto" Margin="10,50,10,10">
                <DataGrid x:Name="songList" Height="Auto"
                          Width="Auto" AutoGenerateColumns="False" HeadersVisibility="Column"
                          GridLinesVisibility="Horizontal">
                    <DataGrid.Columns>
                        <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                        <DataGridTextColumn Binding="{Binding Artist}" Header="Artist" />
                        <DataGridTextColumn Binding="{Binding Album}" Header="Album" />
                        <DataGridTextColumn Binding="{Binding Genre}" Header="Genre" />
                    </DataGrid.Columns>
                    <DataGrid.RowDetailsTemplate>
                        <DataTemplate>
                            <Border>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="{Binding Title}" />
                                    <TextBlock Text="{Binding Artist}" />
                                    <TextBlock Text="{Binding Length}" />
                                    <TextBlock Text="More Info" />
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </DataGrid.RowDetailsTemplate>

                    <DataGrid.ContextMenu>
                        <ContextMenu>
                            <MenuItem Command="Play" />
                            <Separator />
                            <MenuItem Command="Delete" />
                        </ContextMenu>
                    </DataGrid.ContextMenu>
                </DataGrid>
                <StackPanel Height="Auto" Width="Auto" Margin="0" Orientation="Horizontal">
                    <Button Content="Previous" Width="75" Height="25" Margin="10" />
                    <Button Content="Play/Pause" Width="75" Height="25" Margin="10" />
                    <Button Content="Next" Width="75" Height="25" Margin="10" />
                    <Button Content="Stop" Width="75" Height="25" Margin="10" />
                </StackPanel>
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>