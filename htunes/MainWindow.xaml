<Window x:Name="mainWindow" x:Class="htunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:htunes"
        mc:Ignorable="d"
        Title="hTunes" Height="500" Width="800">
    <Grid>
        <ToolBarPanel>
            <ToolBar Band="1" BandIndex="1" HorizontalAlignment="Left" Height="44" VerticalAlignment="Top" Width="518">
                <Button>
                    <Image Source="music_folder.ico" />
                </Button>
                <Button>
                    <Image Source="playlist_new.ico" />
                </Button>
                <Button>
                    <Image Source="get_info.ico" />
                </Button>
                <!--<TextBox HorizontalAlignment="Right" Width="150"/>-->
            </ToolBar>
        </ToolBarPanel>
        <DockPanel Width="Auto" Height="Auto" LastChildFill="False">
            <ListBox Height="Auto" Width="100" Margin="10,50,10,10" DockPanel.Dock="Left" />
            <DataGrid x:Name="songList" Height="Auto" Margin="10,50,10,100"
                      Width="Auto" AutoGenerateColumns="False" DockPanel.Dock="Top">
                <DataGrid.Columns>
                    <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                    <DataGridTextColumn Binding="{Binding Artist}" Header="Artist" />
                    <DataGridTextColumn Binding="{Binding Album}" Header="Album" />
                    <DataGridTextColumn Binding="{Binding Genre}" Header="Genre" />
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Height="Auto" Width="Auto" Margin="10" DockPanel.Dock="Bottom" Orientation="Horizontal">
                <Button Content="Previous" Width="75" Height="25" Margin="10" />
                <Button Content="Play/Pause" Width="75" Height="25" Margin="10" />
                <Button Content="Next" Width="75" Height="25" Margin="10" />
                <Button Content="Stop" Width="75" Height="25" Margin="10" />
            </StackPanel>
        </DockPanel>
    </Grid>
</Window>