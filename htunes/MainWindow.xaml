<Window x:Name="mainWindow" x:Class="htunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:htunes"
        mc:Ignorable="d"
        Title="hTunes" Height="350" Width="525">
    <Grid>
        <DataGrid x:Name="songList" HorizontalAlignment="Left" Height="301" Margin="10,10,0,0" VerticalAlignment="Top"
                 Width="498" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Title}" Header="Title" />
                <DataGridTextColumn Binding="{Binding Artist}" Header="Artist" />
                <DataGridTextColumn Binding="{Binding Album}" Header="Album" />
                <DataGridTextColumn Binding="{Binding Genre}" Header="Genre" />
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>